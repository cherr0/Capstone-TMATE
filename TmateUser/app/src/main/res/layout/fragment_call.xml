    <ScrollView
        android:id="@+id/call_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout31"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="90dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <ViewFlipper
                    android:id="@+id/call_banner_ViewFlipper"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ViewFlipper_img_first"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner"
                        android:scaleType="fitXY"/>

                    <ImageView
                        android:id="@+id/ViewFlipper_img_second"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/ViewFlipper_img_third"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner"
                        android:scaleType="fitXY"/>

                </ViewFlipper>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/call_Constraint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/call_banner_ViewFlipper"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/call_constraint_radius"
                    android:layout_marginTop="88dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/together_call"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/normal_call"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/together_call_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="32dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@drawable/together"/>

                            <TextView
                                android:id="@+id/together_call_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="동승호출"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/together_call_img" />

                            <!--                            <TextView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginTop="16dp"-->
                            <!--                                android:text="동승을 통해\n금액을 줄여보세요"-->
                            <!--                                app:layout_constraintStart_toStartOf="@+id/textView2"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@+id/textView2" />-->
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/normal_call"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/together_call"
                        app:layout_constraintTop_toTopOf="@+id/together_call">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/normal_call_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="32dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@drawable/nomal"/>

                            <TextView
                                android:id="@+id/normal_call_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일반호출"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/normal_call_img" />

                            <!--                            <TextView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginTop="16dp"-->
                            <!--                                android:text="빠르고 편안한\n호출을 즐겨보세요"-->
                            <!--                                app:layout_constraintStart_toStartOf="@+id/textView3"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@+id/textView3" />-->
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/requset_list"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="8dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/together_call">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/requset_list_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/requset_list"/>

                            <TextView
                                android:id="@+id/requset_list_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="현재 신청중인 매칭"
                                android:textColor="@color/black"
                                android:textSize="28sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/requset_list_img"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!--                            <TextView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginTop="16dp"-->
                            <!--                                android:text="빠르고 편안한\n호출을 즐겨보세요"-->
                            <!--                                app:layout_constraintStart_toStartOf="@+id/textView3"-->
                            <!--                                app:layout_constraintTop_toBottomOf="@+id/textView3" />-->
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/call_banner_img"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@+id/call_Constraint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/banner"
                    android:background="@drawable/box_radius"/>

                <ImageView
                    android:id="@+id/call_campaign_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/call_banner_img"
                    android:src="@drawable/ic_baseline_campaign_24"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"/>

                <ViewFlipper
                    android:id="@+id/call_notice_ViewFlipper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/call_banner_img"
                    app:layout_constraintStart_toEndOf="@+id/call_campaign_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/call_notice_first"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="공지사항1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/call_notice_second"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="공지사항2"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/call_notice_third"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="공지사항3"
                        android:textSize="24sp" />

                </ViewFlipper>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

