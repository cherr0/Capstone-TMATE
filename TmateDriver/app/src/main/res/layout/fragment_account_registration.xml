<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="계좌 등록"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/first_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="#DB0082"
        app:spb_currentStateNumber="four"
        app:spb_maxStateNumber="five"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="#eeeeee"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#2196F3" />
    <LinearLayout

        android:layout_marginTop="30dp"
        android:id="@+id/bank"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/box_shape"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reg">
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/bank_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1. 은행 선택"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/bank_list"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_expand_more_24"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/bank_check"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/box_shape"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reg">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_done_outline_24"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/card_company"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="우리"
            android:textAlignment="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/bc_acnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5555555"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/card_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="변경"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
            android:textColor="#4254BC"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="right">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="120dp"
        android:id="@+id/d_acnum_click"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/box_shape"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="2. 계좌 인증"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/d_acnum_linear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_shape"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_reg">

        <TextView
            android:id="@+id/bank_name_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2. 계좌 인증"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/d_acnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4254BC"
            android:hint="계좌번호 입력"
            android:inputType="number" />

        <Button
            android:id="@+id/call_admit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4254BC"
            android:text="인증요청"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/confirm_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/first_reg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1원을 보냈습니다."
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="본인의 계좌인지 확인하기 위해 입력하신 계좌로 1원을 입금했습니다."
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1. 계좌에 입금된 1원의 입금자명을 확인해 주세요."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_shape"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계좌 거래내역"
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입금자 명"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="입금"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="****"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1원"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2. 입금자명을 입력해주세요."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4글자 입력" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:text="신청하기"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:backgroundTint="#4254BC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>