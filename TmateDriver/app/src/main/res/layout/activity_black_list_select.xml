<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="블랙리스트 등록"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/layout_stroke"
        app:layout_constraintBottom_toTopOf="@+id/btn_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_one"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toTopOf="@+id/seat_three"
            app:layout_constraintEnd_toEndOf="@+id/seat_three"
            app:layout_constraintStart_toStartOf="@+id/seat_three"
            app:layout_constraintTop_toTopOf="parent"
            app:tib_drawable_off="@drawable/ic_sit_off1"
            app:tib_drawable_on="@drawable/ic_sit_on1" />

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_two"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/seat_three"
            app:layout_constraintEnd_toStartOf="@+id/seat_three"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seat_three"
            app:tib_drawable_off="@drawable/ic_sit_off2"
            app:tib_drawable_on="@drawable/ic_sit_on2" />

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_three"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seat_two"
            app:layout_constraintTop_toBottomOf="@+id/seat_one"
            app:tib_drawable_off="@drawable/ic_sit_off3"
            app:tib_drawable_on="@drawable/ic_sit_on3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_seat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="블랙리스트 등록"
        android:textSize="20sp"
        app:backgroundTint="#4267B2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>