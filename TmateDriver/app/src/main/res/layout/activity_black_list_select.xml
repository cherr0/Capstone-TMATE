<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_black_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="블랙리스트 등록"
        android:textColor="#000000"
        android:textSize="32sp"
        android:fontFamily="@font/font_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/layout_stroke"
        app:layout_constraintBottom_toTopOf="@+id/btn_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_black_title">

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_one"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toTopOf="@+id/seat_three"
            app:layout_constraintEnd_toEndOf="@+id/seat_three"
            app:layout_constraintStart_toStartOf="@+id/seat_three"
            app:layout_constraintTop_toTopOf="parent"
            app:tib_drawable_off="@drawable/ic_sit_off"
            app:tib_drawable_on="@drawable/ic_sit_off_more" />

        <TextView
            android:id="@+id/seat_one_m_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/ibmplexsanskr_medium"
            android:text="박한수"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/seat_one"
            app:layout_constraintStart_toStartOf="@+id/seat_one"
            app:layout_constraintTop_toTopOf="@+id/seat_one" />

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_two"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/seat_three"
            app:layout_constraintEnd_toStartOf="@+id/seat_three"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seat_three"
            app:tib_drawable_off="@drawable/ic_sit_off"
            app:tib_drawable_on="@drawable/ic_sit_off_more" />

        <TextView
            android:id="@+id/seat_two_m_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/ibmplexsanskr_medium"
            android:text=""
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/seat_two"
            app:layout_constraintStart_toStartOf="@+id/seat_two"
            app:layout_constraintTop_toTopOf="@+id/seat_two" />

        <net.colindodd.toggleimagebutton.ToggleImageButton
            android:id="@+id/seat_three"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seat_two"
            app:layout_constraintTop_toBottomOf="@+id/seat_one"
            app:tib_drawable_off="@drawable/ic_sit_off"
            app:tib_drawable_on="@drawable/ic_sit_off_more" />

        <TextView
            android:id="@+id/seat_three_m_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/ibmplexsanskr_medium"
            android:text=""
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/seat_three"
            app:layout_constraintStart_toStartOf="@+id/seat_three"
            app:layout_constraintTop_toTopOf="@+id/seat_three" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_seat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="블랙리스트 등록"
        android:textSize="20sp"
        app:backgroundTint="#4267B2"
        android:fontFamily="@font/font_sub_title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>