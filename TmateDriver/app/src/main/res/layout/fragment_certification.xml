<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="휴대폰정보 인증"
        android:fontFamily="@font/font_header"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_certification_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_header"
        android:text="인증번호 확인"
        android:textColor="#000000"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_certification" />

    <TextView
        android:id="@+id/tv_certification_plz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_sub_title"
        android:text="인증번호를 입력해주세요"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_certification_check"
        app:layout_constraintTop_toBottomOf="@+id/tv_certification_check" />

    <TextView
        android:id="@+id/tv_certNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_confirmNum"
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:fontFamily="@font/font_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_certification_plz" />

    <Button
        android:id="@+id/btn_profile"
        android:text="다음"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_sub_title"
        android:backgroundTint="#4254BC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/time_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="@font/font_content"
        app:layout_constraintStart_toStartOf="@+id/et_confirmNum"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmNum" />

</androidx.constraintlayout.widget.ConstraintLayout>