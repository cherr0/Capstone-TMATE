<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tmate.driver">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tmate_driver"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.TmateDriver">
        <service
            android:name=".services.driving_overlay"
            android:enabled="true"
            android:exported="true"></service>

        <activity android:name=".activity.BlackListSelectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activity.MatchingFinishedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.HotPlaceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.TrafficInformationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.CheckActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.PaymentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.NoticeDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.WaitingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>